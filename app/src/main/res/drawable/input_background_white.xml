<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 15dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <!--            Button Shadow Color -->
            <solid android:color="#C1C1C1" />
            <corners android:radius="@dimen/def_radius" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="12px">

        <shape  android:shape="rectangle">
            <padding android:bottom="10dp"
                android:top="10dp"
                android:left="20dp"
                android:right="20dp"/>

            <!--            Button TOP Color -->
            <solid android:color="#FFFFFF" />
            <corners android:radius="@dimen/def_radius" />
        </shape>

    </item>


</layer-list>